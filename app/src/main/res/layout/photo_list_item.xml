<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#BBBBBB">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_photo"
            style="@style/RecyclerView.Item.Image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/photo_list_item_image_margin"
            android:layout_marginBottom="@dimen/photo_list_item_image_margin"
            android:layout_marginStart="@dimen/photo_list_item_image_margin"
            android:layout_marginLeft="@dimen/photo_list_item_image_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_title"
            style="@style/RecyclerView.Item.Title"
            android:layout_toRightOf="@+id/item_photo"
            android:layout_toEndOf="@+id/item_photo"
            android:layout_alignTop="@id/item_photo"
            android:layout_alignBottom="@id/item_photo"
            android:layout_marginStart="@dimen/photo_list_item_image_margin"
            android:layout_marginLeft="@dimen/photo_list_item_image_margin"
            android:layout_marginEnd="@dimen/photo_list_item_image_margin"
            android:layout_marginRight="@dimen/photo_list_item_image_margin"
            android:layout_marginBottom="@dimen/photo_list_item_image_margin"
            android:layout_marginTop="@dimen/photo_list_item_image_margin"
            app:layout_constraintStart_toEndOf="@+id/item_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_photo" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>